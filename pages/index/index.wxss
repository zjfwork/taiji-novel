.index-wrapper{
    position: relative;
    background: white;
    /* padding: 0 10px; */
    /* margin-top: 10px; */
}
.search{
    position: relative;
    width: 100%;
    height: 40px;
    /* position: fixed;
    top: 0;
    left: 0; */
}
.search .inp{
    position: absolute;
    width: 96%;
    height: 40px;
    background: white;
    border: solid #ccc 1px;
    border-radius: 5px;
    /* text-indent: 10px; */
    padding-left: 10px;
}
.search .ss{
    position: absolute;
    top: 0px;
    right: 0px;
    width: 40px;
    height: 40px;
}
/* 轮播图 */
.lbt{
    width: 100%;
    position: relative;
    top: 10px;
    /* top: 50px; */
}
.lbt image{
    width: 100%;
    height: 100%;
}

/* 分类 */
.cate-a{
    width: 100%;
    margin-top: 20px;
    /* padding: 0 10px; */
}
.cate-a .cate-top{
    display: block;
    width: 100%;
    height: 40px;
    line-height: 40px;
    /* padding-left: 10px;出现横向滚动条 */
    text-indent: 10px;
    background: #f0f0f0;    
}
.cate-a .ul{
    width: 100%;
    height: 120px;
    /* text-align: center; */
    /* line-height: 120px; */
    margin-bottom: 10px;
    /* background: cyan; */
}
.ul .li{
    height: 120px;
    position: relative;
}
.ul .li image{
    width: 90px;
    height: 110px;
    margin: 5px;
}
.ul .li .cate-right{
    height: 120px;
    position: absolute;
    top: 0px;
    left: 100px;
}

.cate-right .cate-aa{
    border-bottom:solid 1px #ccc; 
    margin: 0 10px;
}
.cate-aa .bookname{
    font-weight: bold;
}
.cate-aa .author{
    float: right;
    color: #ccc;
}

.cate-right .cate-bb{

    /* height: 65px; */
    /* height: 75px; */
    text-indent: 30px;
    margin-top: 5px;
    overflow: hidden;

    /* width: 100px;
    text-overflow: ellipsis;
    white-space: nowrap; */
}
.cate-bb .bookinfo{
    display: block;
    height: 80px;
    text-indent: 20px;
    font-size: 14px;
}

