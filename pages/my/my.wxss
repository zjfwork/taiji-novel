.my-wrapper{
    position: relative;
}
.my-wrapper .info{
    background: white;
    text-align: center;
    padding: 20px;
    /* margin-bottom: 10px; */
}
.info .img{
    width: 90px;
    height: 90px;
    margin: 0 auto 10px auto;
}
.info .img image{
    width: 90px;
    height: 90px;
    border-radius: 50%;
}
.info .nickname{
    font-size: 18px;
    color: gray;
}

/* 信息 */
.lists{
    background: white;
    width: 100%;
    margin-top: 10px;
}
.lists .li{
    width: 100%;
    height: 40px;
    line-height: 40px;
    /* padding-left : 10px; */
    border-bottom: solid 1px #ccc; 
}
.li text{
    margin-left: 10px;
}
.li image{
    width: 20px;
    height: 20px;
    float: right;
    margin: 10px 10px 0 0;
}